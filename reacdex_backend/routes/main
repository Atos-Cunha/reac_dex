const path = require("path");
const { Router } = require("express");
const { get_all, get_single, post_single, patch_single, delete_single, get_img } = require("../controlers/pokemonController");

const router = Router();

router.get('/', get_all);
router.get('/:id', get_single);
router.post('/', post_single);
router.patch('/:id', patch_single);
router.delete('/:id', delete_single);
router.get('/:id/img', get_img);

module.exports = router;